@model BiblionetModel.Models.Registro
@{ 
    Layout = null;
}
@{
    ViewBag.Title = "Create";
}

<h2>Crear Nuevo Registro</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
